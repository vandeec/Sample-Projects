<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.ogurycordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ogury Cordova</name>
    <description>
        A sample Ogury App built in Cordova.
    </description>
    <author email="loic@ogury.co" href="http://www.ogury.com">
        Ogury Tech Ops Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <feature name="CPresage">
        <param name="android-package" value="io.presage.CPresage" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Toast">
        <param name="android-package" value="nl.xservices.plugins.Toast" />
    </feature>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <engine name="android" spec="^6.3.0" />
    <engine name="browser" spec="^5.0.1" />
</widget>
